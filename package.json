{
  "name": "unrounded-twitter",
  "version": "1.0.0",
  "description": "Making twitter not so round.",
  "main": "index.js",
  "scripts": {
    "start": "npm run clean && npm-run-all copy:* --parallel watch:* styles:*",
    "clean": "rm -drf dist && mkdir -p ./dist/{css,img,js}",
    "copy:images": "cp -r ./src/img/ ./dist/img/",
    "copy:html": "cp -r ./src/*.html ./dist/",
    "copy:manifest": "node ./tasks/manifestReplace.js",
    "watch:html": "watchman ./src/*.html \"npm run copy:html\"",
    "watch:images": "watchman ./src/img \"npm run copy:images\"",
    "watch:manifest": "watchman ./src/manifest.json \"npm run copy:manifest\"",
    "styles:scss": "sass --watch --load-path=node_modules/bourbon/app/assets/stylesheets --style=compressed src/scss/base.scss:dist/css/main.css --trace",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/danjford/unrounded-twitter.git"
  },
  "author": "danjford <http://www.github.com/danjford>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/danjford/unrounded-twitter/issues"
  },
  "homepage": "https://github.com/danjford/unrounded-twitter#readme",
  "devDependencies": {
    "bourbon": "^4.2.7",
    "npm-run-all": "^2.3.0",
    "sass": "^0.5.0",
    "watchman": "^0.1.8"
  }
}
